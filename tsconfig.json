{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "interfaces/*" : ["interfaces/*"],
      "atoms/*" : ["atoms/*"],
      "styles/*" : ["styles/*"],
      "views/*" : ["views/*"],
      "organisms/*" : ["organisms/*"],
      "stores/*" : ["stores/*"],
      "icons/*" : ["icons/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "plugin": ["styled-jsx/babel"]
  },
  "include": [
    "src",
    "src/interfaces/custom.d.ts"
  ],
}
